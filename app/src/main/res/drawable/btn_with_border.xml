<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/orange" />
            <stroke
                android:width="@dimen/buttonStrokeWidth"
                android:color="@color/darkgrey" />
            <corners
                android:radius="@dimen/buttonRadius" />
            <padding
                android:left="@dimen/buttonPadding"
                android:top="@dimen/buttonPadding"
                android:right="@dimen/buttonPadding"
                android:bottom="@dimen/buttonPadding" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/xdarkgrey"
                android:endColor="@color/black"
                android:angle="270" />
            <stroke
                android:width="@dimen/buttonStrokeWidth"
                android:color="@color/darkgrey" />
            <corners
                android:radius="@dimen/buttonRadius" />
            <padding
                android:left="@dimen/buttonPadding"
                android:top="@dimen/buttonPadding"
                android:right="@dimen/buttonPadding"
                android:bottom="@dimen/buttonPadding" />
        </shape>
    </item>
</selector>