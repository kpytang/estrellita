    <dimen name="formLeftFieldWidth">130dip</dimen>    
    <style name="dateRow">
    	<item name="android:textColor">@color/white</item>
    	<item name="android:textSize">@dimen/font_regular</item>
    	<item name="android:paddingTop">@dimen/spacer_small</item>
    	<item name="android:paddingBottom">@dimen/spacer_small</item>
    </style>
    <style name="apptDoctor">
    	<item name="android:textColor">@color/white</item>
    	<item name="android:textSize">@dimen/font_regular</item>
    </style>
    <style name="apptTime">
    	<item name="android:textColor">@color/white</item>
    	<item name="android:textSize">@dimen/font_regular</item>
    </style>
