    </style>
	<style name="apptFieldName">
		<item name="android:textColor">@color/white</item>
    	<item name="android:textSize">@dimen/font_small</item>
    	<item name="android:textStyle">bold</item>
    	<item name="android:paddingLeft">@dimen/marginLeft_main</item>
    	<item name="android:paddingRight">@dimen/spacer_large</item>
    	<item name="android:paddingTop">@dimen/spacer_xsmall</item>
    	<item name="android:paddingBottom">@dimen/spacer_xsmall</item>
    	<item name="android:gravity">left|center_vertical</item>
	</style>
	<style name="apptBigTextField" parent="@android:style/Widget.EditText">
		<item name="android:textColorHint">#AABBAA</item>
		<item name="android:textColor">@color/black</item>
    	<item name="android:textSize">@dimen/font_small</item>
	</style>
	<style name="apptConcernsPrompt">
		<item name="android:textColor">@color/white</item>
    	<item name="android:textSize">@dimen/font_small</item>
    	<item name="android:layout_marginTop">@dimen/spacer_small_negative</item>
    	<item name="android:paddingLeft">@dimen/marginLeft_main</item>
    	<item name="android:paddingRight">@dimen/spacer_large</item>
    	<item name="android:paddingBottom">@dimen/spacer_xsmall</item>
