<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:paddingRight="10dp" android:paddingBottom="10dp">
	<ImageView android:id="@+id/home_wall__item_icon"
		android:scaleType="fitXY" android:layout_width="50dip"
		android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
		android:layout_height="50dip" />
	<TextView android:id="@+id/home_wall__item_message"
		android:layout_width="fill_parent" android:layout_alignParentTop="true"
		android:layout_toRightOf="@+id/home_wall__item_icon" android:layout_marginLeft="10dp"
		android:layout_height="wrap_content" android:textColor="#000000"
		android:textSize="12sp">
	</TextView>
	<TextView android:id="@+id/home_wall__item_info"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/home_wall__item_icon" android:layout_marginLeft="10dp"
		android:layout_below="@+id/home_wall__item_message" android:textSize="12sp">
	</TextView>
</RelativeLayout>
