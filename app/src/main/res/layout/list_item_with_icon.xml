<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/spacer_large"
    android:paddingBottom="@dimen/spacer_large"
    android:paddingLeft="@dimen/spacer_large"
    android:paddingRight="@dimen/spacer_small"
    android:background="@drawable/basic_onpressed"
    >

    <TextView 
    	style="@style/radiobutton_row1"
    	android:id="@+id/text"
        android:layout_gravity="center_vertical"
        android:layout_width="0dip"
        android:layout_weight="1.0"
        android:layout_height="wrap_content"
        />
    
    <ImageView 
    	android:id="@+id/icon"
        android:layout_width="36dip"
        android:layout_height="36dip"
        />

</LinearLayout>
