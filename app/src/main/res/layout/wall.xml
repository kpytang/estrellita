<LinearLayout android:id="@+id/homescrollviewcontent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:padding="5dp"
	>
	<include 
		layout="@layout/activity_header"
		android:layout_width="fill_parent"
		android:layout_height="@dimen/activityHeaderHeight"
		/>
    <View
		style="@style/greySeparator_thin"
		/>
    <include 
    	layout="@layout/button_header"
    	android:layout_width="fill_parent"
    	android:layout_height="@dimen/buttonHeaderHeight"
    	/>
    <View
		style="@style/greySeparator_thin"
		/>
	
	<ListView android:id="@+id/home_posts" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:cacheColorHint="#FFFFFF"
		android:background="@color/white"
		>
	</ListView>

	<Button android:id="@+id/homeMoreButton" android:layout_width="wrap_content"
		android:text="@string/load_more" android:layout_height="wrap_content"
		android:layout_gravity="center_vertical|center_horizontal">
	</Button>

</LinearLayout>